<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Resources="clr-namespace:Design.Resources">
    <ResourceDictionary.MergedDictionaries>
        <Resources:ResourceDictionaryEx>
            <Resources:ResourceDictionaryEx.ThemeDictionaries>
                <Resources:ThemeDictionary ThemeName="Light">
                    <Resources:ThemeDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/Design;component/Themes/Theme.xaml"/>
                    </Resources:ThemeDictionary.MergedDictionaries>
                </Resources:ThemeDictionary>
                <Resources:ThemeDictionary ThemeName="Dark">
                    <Resources:ThemeDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/Design;component/Themes/Theme.Dark.xaml" />
                    </Resources:ThemeDictionary.MergedDictionaries>
                </Resources:ThemeDictionary>
            </Resources:ResourceDictionaryEx.ThemeDictionaries>
        </Resources:ResourceDictionaryEx>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>