<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Base.Static.Background"     Color="#00000000" />
    <SolidColorBrush x:Key="Base.Static.Border"         Color="#00707070"/>
    <SolidColorBrush x:Key="Base.Static.Foreground"     Color="#FF707070"/>

    <SolidColorBrush x:Key="Base.MouseOver.Background"  Color="#00E4E4E4"/>
    <SolidColorBrush x:Key="Base.MouseOver.BorderBrush" Color="#FF707070"/>
    <SolidColorBrush x:Key="Base.MouseOver.Foreground"  Color="#FF707070"/>

    <SolidColorBrush x:Key="Base.Pressed.Background"   Color="#FFE4E4E4"/>
    <SolidColorBrush x:Key="Base.Pressed.BorderBrush"  Color="#FF707070"/>
    <SolidColorBrush x:Key="Base.Pressed.Foreground"   Color="#FF707070"/>

    <SolidColorBrush x:Key="Base.Disabled.Background"  Color="#00000000"/>
    <SolidColorBrush x:Key="Base.Disabled.BorderBrush" Color="#7F000000"/>
    <SolidColorBrush x:Key="Base.Disabled.Foreground"  Color="#7F000000"/>
    
</ResourceDictionary>